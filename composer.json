{
    "name": "cable8mm/qr-images",
    "authors": [
        {
            "name": "Sam Lee",
            "email": "cable8mm@gmail.com"
        }
    ],
    "require": {
        "symfony/console": "^6.3",
        "chillerlan/php-qrcode": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Cable8mm\\QrImages\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cable8mm\\QrImages\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "phpunit/phpunit": "^10.4"
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit tests --testdox --colors=always"
        ],
        "lint": [
            "./vendor/bin/pint"
        ],
        "app": [
            "./bin/application"
        ]
    }
}
